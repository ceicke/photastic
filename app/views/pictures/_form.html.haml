= semantic_form_for [@album, @picture], html: { enctype: 'multipart/form-data'} do |f|
  - if @picture.errors.any?
    .alert.alert-error
      %h4= t('save_error')
      = t('no_picture_file_selected')

  = f.inputs do
    = f.input :picture_file, as: :file, label: false
    = f.input :description, as: :text, placeholder: t('picture_description'), label: false, input_html: {rows: 5, cols: 50}

    = link_to t('back'), album_pictures_path(@album), class: 'btn btn-secondary'
    = f.action :submit, :label => t('save')