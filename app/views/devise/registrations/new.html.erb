<div id="sign_in2">
  <div class="container">
      <div class="row login">
          <div class="span5 left_box">
              <h4><%= t('sign_up') %></h4>
          </div>

          <div class="span6 signin_box">
              <div class="box">
                  <div class="box_cont">
                      <div class="form">
                          <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                              <%= f.email_field :email, :autofocus => true, placeholder: t('email_of_user') %>
                              <%= f.password_field :password, placeholder: t('password') %>
                              <%= f.password_field :password_confirmation, placeholder: t('password_confirmation') %>
                              <%= f.submit 'Sign up' %>
                          <% end -%>
                          <div class="forgot">
                                <%= link_to t('sign_in'), new_session_path(resource_name) %><br />
                                <%= link_to t('passwort_forgotten'), new_password_path(resource_name) %>
                          </div>
                      </div>

                  </div>
              </div>
          </div>
      </div>
  </div>
</div>
