<div id="sign_in2">
  <div class="container">
      <div class="row login">
          <div class="span5 left_box hidden-phone visible-desktop">
              <h4>Log in to your account</h4>

              <div class="perk_box">
                  <div class="perk">
                      <span class="icos ico1"></span>
                      <p><strong>Lorem alteration</strong> in some form  injected humour these randomised words .</p>
                  </div>
                  <div class="perk">
                      <span class="icos ico2"></span>
                      <p><strong>There are many variations</strong> of passages of Lorem alteration in some form  injected humour these randomised words.</p>
                  </div>
                  <div class="perk">
                      <span class="icos ico3"></span>
                      <p><strong>Alteration in some form</strong> injected humour these randomised words.</p>
                  </div>
              </div>
          </div>

          <div class="span6 signin_box">
              <div class="box">
                  <div class="box_cont">
                      <div class="form">
                          <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
                              <%= f.email_field :email, :autofocus => true, :placeholder => t('email_of_user') %>
                              <%= f.password_field :password, :placeholder => t('password') %>
                              <% if devise_mapping.rememberable? -%>
                                <div class="remember">
                                  <%= f.check_box :remember_me %>
                                  <span class="text">Remember me</span>
                                </div>
                              <% end -%>
                              <%= f.submit t('sign_in') %>
                          <% end -%>
                          <div class="forgot">
                                <%= link_to "Forgot your password?", new_password_path(resource_name) %><br />
                                <span>Donâ€™t have an account?</span>
                                <%= link_to "Sign up", new_registration_path(resource_name) %>
                          </div>
                      </div>

                  </div>
              </div>
          </div>
      </div>
  </div>
</div>