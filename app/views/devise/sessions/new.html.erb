<div id="sign_in2">
  <div class="container">
      <div class="row login">
          <div class="span5 left_box hidden-phone visible-desktop">
              <h4><%= t('sign_in') %></h4>
          </div>

          <div class="span6 signin_box">
              <div class="box">
                  <div class="box_cont">
                      <div class="form">
                          <%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
                              <%= f.email_field :email, :autofocus => true, :placeholder => t('email_of_user') %>
                              <%= f.password_field :password, :placeholder => t('password') %>
                              <% if devise_mapping.rememberable? -%>
                                <div class="remember">
                                  <%= f.check_box :remember_me %>
                                  <span class="text">Remember me</span>
                                </div>
                              <% end -%>
                              <%= f.submit t('sign_in') %>
                          <% end -%>
                          <div class="forgot">
                                <%= link_to t('password_forgotten'), new_password_path(resource_name) %><br />
                                <span>Donâ€™t have an account?</span>
                                <%= link_to t('sign_up'), new_registration_path(resource_name) %>
                          </div>
                      </div>

                  </div>
              </div>
          </div>
      </div>
  </div>
</div>
