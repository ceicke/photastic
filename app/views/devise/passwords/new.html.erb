<div id="sign_in2">
  <div class="container">
      <div class="row login">
          <div class="span5 left_box">
              <h4><%= t('password forgotten') %>?</h4>

              <div class="perk_box">
                  <div class="perk">
                      <span class="icos ico1"></span>
                      <p><strong>Enter your E-Mail address</strong> and click 'submit'</p>
                  </div>
                  <div class="perk">
                      <span class="icos ico2"></span>
                      <p><strong>You will receive an e-mail</strong> containing a link, please click on it</p>
                  </div>
              </div>
          </div>

          <div class="span6 signin_box">
              <div class="box">
                  <div class="box_cont">
                      <div class="form">
                          <%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
                              <%= f.email_field :email, :autofocus => true, :placeholder => t('email_of_user') %>
                              <%= f.submit 'Submit' %>
                          <% end -%>
                          <div class="forgot">
                                <%= link_to t('sign_in'), new_session_path(resource_name) %><br />
                                <span><%= t('no_account') %></span>
                                <%= link_to t('sign_up'), new_registration_path(resource_name) %>
                          </div>
                      </div>

                  </div>
              </div>
          </div>
      </div>
  </div>
</div>
